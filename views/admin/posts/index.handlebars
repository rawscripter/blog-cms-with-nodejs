<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card ">
            <div class="card-header">All Posts</div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Sl.</th>
                            <th scope="col">ID</th>
                            <th scope="col">Title</th>
                            <th scope="col">Status</th>
                            <th scope="col">Body</th>
                            <th scope="col">Allow Comments</th>
                            <th scope="col" colspan="2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each posts }}

                        <tr>
                            <td scope="row">{{ @index }}</td>
                            <td scope="row">{{ id }}</td>
                            <td>{{ title }}</td>
                            <td>{{ status }}</td>
                            <td>{{ body }}</td>
                            <td>{{ allowComments }}</td>
                            <td>
                                <a href="/admin/posts/{{id}}/edit" class="btn btn-info btn-sm">Edit</a>
                            </td>
                            <td>
                                <form action="/admin/posts/{{id}}/delete?_method=DELETE" method="post">
                                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>

                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>